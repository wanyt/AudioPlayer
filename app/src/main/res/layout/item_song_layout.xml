<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:padding="15dp">

    <TextView
        android:id="@+id/item_song_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1."
        android:paddingLeft="15dp"
        android:layout_centerVertical="true"
        android:textColor="@android:color/white"
        android:textSize="17sp"/>

    <TextView
        android:id="@+id/item_song_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="200dp"
        android:text="Song Name"
        android:textSize="17sp"
        android:textColor="@android:color/white"
        android:paddingLeft="15dp"
        android:singleLine="true"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/item_song_id"/>

    <TextView
        android:id="@+id/item_song_singer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:text="singer"
        android:textSize="12sp"
        android:textColor="@android:color/white"
        android:layout_toRightOf="@+id/item_song_name"
        android:layout_alignBottom="@+id/item_song_name"/>

</RelativeLayout>