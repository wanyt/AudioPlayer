<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="#20000000">

        <!--FFD39B-->
        <ImageView
            android:id="@+id/iv_main_pic_music"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginLeft="5dp"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/tv_main_pic_songname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="adele"
            android:textColor="#ffffff"
            android:textSize="11sp"
            android:paddingLeft="15dp"
            android:maxWidth="180dp"
            android:maxLines="1"
            android:paddingTop="1dp"
            android:layout_alignTop="@+id/iv_main_pic_music"
            android:layout_toRightOf="@+id/iv_main_pic_music"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="i will always love you"
            android:textColor="#ffffff"
            android:paddingLeft="15dp"
            android:paddingBottom="4dp"
            android:textSize="16sp"
            android:layout_alignLeft="@+id/tv_main_pic_songname"
            android:layout_alignBottom="@+id/iv_main_pic_music"/>


        <RelativeLayout
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:layout_marginRight="8dp"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true">

            <ImageView
                android:id="@+id/iv_main_pic_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/icon_skip_next"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"/>

            <ImageView
                android:id="@+id/iv_main_pic_play"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/icon_play"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"/>

            <ImageView
                android:id="@+id/iv_main_pic_previous"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/icon_skip_previous"
                android:layout_alignParentBottom="true"/>

        </RelativeLayout>


</RelativeLayout>